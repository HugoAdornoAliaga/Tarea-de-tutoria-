29.
#include “stdfx.h”
#include “coinio.h” 
#include <iostream>

Using namespace std;

Int main()
{ int n, x=0, y=1, z=1;
 cout<<”digite el numero de elementos: ”; cin>>n;
cout<<”1”;
for(int i=1;i<=n;i++){
z=x+y;
cout<<z<<” “;
x=y;
y=z;
}
return 0;
